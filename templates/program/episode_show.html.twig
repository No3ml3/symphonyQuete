{% extends 'base.html.twig' %}

{% block title %}Episode
{% endblock %}

{% block body %}
	<main>
		<h1>Episode</h1>
        <h2>nom du programme {{ program.title }}</h2>
        <h3>numero de la saison {{ season.number }}</h3>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ episode.id }}</td>
				</tr>
				<tr>
					<th>Number</th>
					<td>{{ episode.number }}</td>
				</tr>
				<tr>
					<th>Title</th>
					<td>{{ episode.title }}</td>
				</tr>
				<tr>
					<th>Synospis</th>
					<td>{{ episode.synopsis }}</td>
				</tr>
			</tbody>
		</table>
		<a href="{{path('program_season_show',{'program':program.id,'season':season.id})}}">back to saison</a>

	</main>
{% endblock %}